<%- include('./partials/head') %>

<body class="endProcessBody">
    <div class="divLogoEndProcess">
        <img src="/images/companyLogoWhite.png" alt="Company Logo" class="endProcessLogo2">
    </div>
    
    <div class="divEndProcess">
        
            <div class="div1">
                <div><b>Â¡Felicitaciones!</b></div>
            </div>
    
            <div class="div2">
                <div>Has finalizado la etapa: <i><b><%= data.processData.description %></b></i></div>
            </div>
    
            <div class="div3">
                Tu nota: <%= grade.toFixed(1) + '%' %>
            </div>

            <div class="divDetails">
    
                <div class="div3">
                    DETALLE DEL EJERCICIO
                </div>
            
                <% exerciseAnswers.forEach(step => { %>
                    <div class="div4">Paso: <b><%= step.step %></b></div>
                    <div class="div5"><%= '- Cantidad de intentos: ' + step.try %></div>
                    <div class="div5">- Observaciones:</div>
                    <% if (step.observations != '') { %>
                        <div class="div6">
                            <%- step.observations.replace(/\n/g, '<br><br>') %> <!---replace \n for <br> to print it in ejs-->
                        </div>
                        <% } else { %>
                            <div class="div6">Sin observaciones</div>
                    <% } %>
                <% }) %>
            </div>
            
    </div>

</body>






