
<div class="divButtons">

    <!---back button--->
    <% if (routes.backRoute != 'NA') { %>
        <div class="button2" id="returnButton">            
            <div>
                <i class="fa-solid fa-chevron-left"></i>
                Volver
            </div>            
         </div>
    <% } %>
    
    <!---validate button--->
    <% if (locals.validation && validation == 'passed') { %>
        <div class="button2 unabledButton">
            <div>Validar</div>
            <div><i class="fa-solid fa-chevron-right"></i></div>
        </div>
        <% } else { %>
            <button type="submit" class="button2">
                Validar
            </button>
    <% } %>
    

    <!---continue--->
    <% if (locals.validation && validation == 'fail') { %>
        <div class="button2 unabledButton">
            <div>Continuar</div>
            <div><i class="fa-solid fa-chevron-right"></i></div>
        </div>
    <% } %>
    <% if (locals.validation && validation == 'passed' || !locals.validation) { %>
        <div class="button2">
            <a href="<%= routes.continueRoute %>" class="hrefButton2">
                <div>Continuar</div>
                <div><i class="fa-solid fa-chevron-right"></i></div>
            </a>
        </div>
        </a>
    <% } %>
</div>

<div class="testButton">
    <a href="<%= routes.continueRoute %>" class="hProvisionalButton">Continuar</a>
</div>





