<table>
    
    <thead>
        <tr>
            <th class="thTitle thTitleTopLeft thTitleTopRight" colspan="2">Temperatura en pozo</th>
        </tr>
        <tr>
            <th class="thTitle2 thTitleWidth">Profundidad (m)</th>
            <th class="thTitle2 thTitleWidth">Temperatura (Â°C)</th>
        </tr>
    </thead>

    <tbody>
        <% data.wellDataTemp.forEach(row => { %>
            <tr>
                <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %>">
                    <%= row.depth %>
                </th>

                <% if (validation == 'passed') { %>
                    
                    <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %>">
                        <%= row.temperature %>
                    </th>

                    <% } else { %>
                        <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %> <%= locals.errors && errors.includes('temp_temperature_' + row.id) ? 'isInvalid' : null %>">
                            <input class="<%= row.id % 2 == 0 ? 'input1' : 'input2' %> <%= locals.errors && errors.includes('temp_temperature_' + row.id) ? 'isInvalid' : null %>" type="number" step="0.01" name="<%= 'temp_temperature_' + row.id %>" value="<%= locals.oldData ? oldData['temp_temperature_' + row.id] : null %>" autocomplete="off">
                        </th>
                <% } %>
                
            </tr>
        <% }) %>  
    </tbody>

</table>

<table>

    <thead>
        <tr>
            <th class="thTitle thTitleTopLeft thTitleTopRight" colspan="3">Reflectancia vitrinita en pozo</th>
        </tr>
        <tr>
            <th class="thTitle2 thTitleWidth">Profundidad (m)</th>
            <% if (data.well.id == 1) { %>
                <th class="thTitle2 thTitleWidth">Ro min (%)</th>
                <th class="thTitle2 thTitleWidth">Ro max (%)</th>
                <% } else { %>
                    <th class="thTitle2 thTitleWidth">Ro (%)</th>
            <% } %>
            
        </tr>
    </thead>

    <tbody>
        <% data.wellDataRo.forEach(row => { %>
            <tr>
                <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %>">
                    <%= row.depth %>
                </th>

                <% if (data.well.id == 1) { %>

                    <% if (validation == 'passed') { %>

                        <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %>"><%= row.ro_min %></th>
                        <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %>"><%= row.ro_max %></th>

                        <% } else { %>

                            <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %> <%= locals.errors && errors.includes('ro_ro_min_' + row.id) ? 'isInvalid' : null %>">
                                <input class="<%= row.id % 2 == 0 ? 'input1' : 'input2' %> <%= locals.errors && errors.includes('ro_ro_min_' + row.id) ? 'isInvalid' : null %>" type="number" step="0.01" name="<%= 'ro_ro_min_' + row.id %>" value="<%= locals.oldData ? oldData['ro_ro_min_' + row.id] : null %>" autocomplete="off">
                            </th>
            
                            <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %> <%= locals.errors && errors.includes('ro_ro_max_' + row.id) ? 'isInvalid' : null %>">
                                <input class="<%= row.id % 2 == 0 ? 'input1' : 'input2' %> <%= locals.errors && errors.includes('ro_ro_max_' + row.id) ? 'isInvalid' : null %>" type="number" step="0.01" name="<%= 'ro_ro_max_' + row.id %>" value="<%= locals.oldData ? oldData['ro_ro_max_' + row.id] : null %>" autocomplete="off">
                            </th>
                     
                    <% } %>
                    

                    <% } else { %>

                        <% if (validation == 'passed') { %>

                            <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %>"><%= row.ro %></th>

                            <% } else { %>

                                <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %> <%= locals.errors && errors.includes('ro_ro_' + row.id) ? 'isInvalid' : null %>">
                                    <input class="<%= row.id % 2 == 0 ? 'input1' : 'input2' %> <%= locals.errors && errors.includes('ro_ro_' + row.id) ? 'isInvalid' : null %>" type="text" name="<%= 'ro_ro_' + row.id %>" value="<%= locals.oldData ? oldData['ro_ro_' + row.id] : null %>" autocomplete="off">
                                </th>
                         
                        <% } %>
                        
                <% } %>
                
            </tr>
        <% }) %>  
    </tbody>
    
</table>