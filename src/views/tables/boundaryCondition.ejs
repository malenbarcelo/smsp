<table>

    <thead>
        <tr>
            <th class="thTitle thTitleTopLeft thTitleTopRight" colspan="2">PWD</th>
        </tr>
        <tr>
            <th class="thTitle2 thTitleWidth">Edad (Ma)</th>
            <th class="thTitle2 thTitleWidth">Valor (m)</th>
        </tr>
    </thead>

    <tbody class="bTableData">
        <% data.pwds.forEach(row => { %>
            <tr>
                <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %>">
                    <%= row.age %>
                </th>

                <% if (validation == 'passed') { %>
                    <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %>">
                        <%= row.pwd %>
                    </th>
                    <% } else { %>
                        <th class="<%= row.id % 2 == 0 ? 'th1' : 'th2' %> <%= locals.errors && errors.includes('pwd_pwd_' + row.id) ? 'isInvalid' : null %>">
                            <input class="<%= row.id % 2 == 0 ? 'input1' : 'input2' %> <%= locals.errors && errors.includes('pwd_pwd_' + row.id) ? 'isInvalid' : null %>" type="number" step="0.01" name="<%= 'pwd_pwd_' + row.id %>" value="<%= locals.oldData ? oldData['pwd_pwd_' + row.id] : null %>" autocomplete="off">
                        </th>
                <% } %>
            </tr>
        <% }) %>  
    </tbody>

</table>

